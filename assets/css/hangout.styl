#push, footer, header
  display: none
#page
  margin: 0
#app
  margin: 0
  padding: 0
  position: absolute
  top: 0
  left: 0
  height: 100%
  width: 100%

.hangout-sidebar, .hangout-main
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box
  position: absolute
  left: 0
  top: 0
  height: 100%

.hangout-sidebar
  cursor: pointer
  width: 38px
  transition-property: width
  transition-duration: 200ms
  .reveal-sidebar
    cursor: pointer
    button
      margin: 0
  .title
    display: none
  &.expanded
    .title
      display: inline
    .navbar
      background-color: #ddd
      .title
        padding-left: 10px
        font-size: 1.5em
        float: left
    width: 256px
    .reveal-sidebar
      width: 100%
      button
        margin-left: 5px
        margin-right: 5px
        text-align: right
  background-color: rgba(230, 230, 230, 0.9)
  ul
    margin: 0
  li
    list-style-type: none
  button.add-document
    width: 100%
  .document-list
    .app-tile
      width: 32px
      height: 32px
    li
      margin: 5px 2px
      cursor: pointer
    li.active
      background-color: #ffe
      box-shadow: 0px 0px 4px #ff0088

.hangout-document-chooser
  display: none
  background-color: #eee
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%
  overflow: hidden
  .head
    position: absolute
    top: 0
    left: 0
    height: 60px
    width: 100%
    text-align: center
    .cancel
      position: absolute
      left: 0
  .main, .document-list-holder
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    box-sizing: border-box

  .main
    position: absolute
    top: 0
    left: 0
    height: 100%
    width: 100%
    overflow: hidden
    padding-top: 60px
    padding-bottom: 90px
  .foot
    position: absolute
    left: 0
    bottom: 0
    padding-top: 10px
    height: 80px
    width: 100%
  .document-list-holder
    background-color: white
    height: 100%
    margin-left: auto
    margin-right: auto
    width: 80%
    padding: 5px
    overflow: auto
    .trash-document
      display: none

.hangout-main
  width: 100%
  height: 100%
  overflow: hidden
  padding-left: 38px
  .placeholder
    text-align: center
    position: absolute
    left: 0
    bottom: 0
    width: 100%
  iframe
    border: 0
    padding: 0
    margin: 0
    width: 100%
    height: 100%
